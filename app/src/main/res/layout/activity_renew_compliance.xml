<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RenewCompliance">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Renew Compliance"
        app:titleTextColor="@color/button_text"
        android:theme="@style/toolbarTheme"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progress_bar"
        android:paddingBottom="@dimen/_50sdp"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:descendantFocusability="beforeDescendants"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:paddingBottom="@dimen/_40sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Compliance Name"
                android:paddingBottom="5dp"
                android:id="@+id/name_title"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_title"
                android:id="@+id/compliance_name"
                android:textSize="@dimen/title_text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/compliance_ref_no"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/note_title"
                android:text="Additional Notes"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/note_title"
                android:textSize="@dimen/title_text"
                android:textColor="@android:color/black"
                android:id="@+id/compliance_notes"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/compliance_name"
                android:id="@+id/issueauth_title"
                android:text="Issuing Authority"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/issueauth_title"
                android:id="@+id/compliance_issue_auth"
                android:textSize="@dimen/title_text"
                android:textColor="@android:color/black"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/compliance_issue_auth"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Reference No."
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:id="@+id/ref_no_title"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ref_no_title"
                android:textColor="@android:color/black"
                android:textSize="@dimen/title_text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:id="@+id/compliance_ref_no"/>

            <TextView
                android:layout_width="@dimen/_135sdp"
                android:layout_height="wrap_content"
                android:id="@+id/valid_from_title"
                android:layout_marginStart="@dimen/_15sdp"
                android:text="Valid From"
                android:paddingBottom="5dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/compliance_notes"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>

            <EditText
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/compliance_valid_from"
                android:textColorHint="@color/hintcolor"
                android:textColor="@color/colorPrimaryDark"
                android:hint="Valid From"
                android:focusable="false"
                android:inputType="date"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_below="@id/valid_from_title"
                android:layout_marginStart="@dimen/_15sdp"
                android:background="@drawable/custom_textbox"/>

            <TextView
                android:layout_width="@dimen/_135sdp"
                android:layout_height="wrap_content"
                android:id="@+id/valid_to_title"
                android:layout_marginStart="@dimen/_15sdp"
                android:text="Valid Upto"
                android:paddingStart="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/compliance_notes"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:layout_toEndOf="@id/valid_from_title"/>

            <EditText
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/compliance_valid_upto"
                android:textColorHint="@color/hintcolor"
                android:textColor="@color/colorPrimaryDark"
                android:hint="Valid Upto"
                android:focusable="false"
                android:inputType="date"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_below="@id/valid_to_title"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@id/compliance_valid_from"
                android:background="@drawable/custom_textbox"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="@color/colorPrimaryDark"
                app:strokeWidth="1dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_below="@id/compliance_valid_from"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:text="Upload Certificate"
                android:textColor="@color/colorPrimaryDark"
                android:textAllCaps="false"
                android:gravity="start|center_vertical"
                android:id="@+id/compliance_certificate"/>

            <TextView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_toEndOf="@id/compliance_certificate"
                android:layout_below="@id/compliance_valid_upto"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:text="You can upload upto 5 certificates (200KB each)"
                android:gravity="center_vertical"
                android:id="@+id/certificate_count"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/compliance_certificate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_40sdp"
                android:text="Renew Compliance"
                app:strokeColor="@color/colorPrimaryDark"
                app:strokeWidth="1dp"
                android:id="@+id/add_compliance_btn"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>