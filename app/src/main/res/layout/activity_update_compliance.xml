<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UpdateCompliance">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Update Compliance"
        android:theme="@style/toolbarTheme"
        app:titleTextColor="@color/toolbarTextColor"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:descendantFocusability="beforeDescendants"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_20sdp"
            android:paddingBottom="@dimen/_10sdp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:id="@+id/update_compliance_name"
                android:textColorHint="@color/hintcolor"
                android:textColor="@color/colorPrimaryDark"
                android:hint="Compliance Name"
                android:inputType="textCapWords"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/custom_textbox"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:id="@+id/update_compliance_ref_no"
                android:textColorHint="@color/hintcolor"
                android:textColor="@color/colorPrimaryDark"
                android:hint="Reference Number"
                android:inputType="textCapCharacters"
                android:layout_below="@id/update_compliance_name"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/custom_textbox"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:id="@+id/update_compliance_issue_auth"
                android:layout_below="@id/update_compliance_ref_no"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/custom_textbox"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:id="@+id/update_compliance_other_auth"
                android:textColorHint="@color/hintcolor"
                android:textColor="@color/colorPrimaryDark"
                android:hint="Issuing Authority"
                android:inputType="textCapWords"
                android:layout_below="@id/update_compliance_issue_auth"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/custom_textbox"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_centerHorizontal="true"
                android:id="@+id/update_compliance_note"
                android:textColorHint="@color/hintcolor"
                android:textColor="@color/colorPrimaryDark"
                android:hint="Additional Note"
                android:gravity="top"
                android:padding="10dp"
                android:inputType="textCapSentences|textMultiLine"
                android:layout_below="@id/update_compliance_other_auth"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/custom_textbox"/>

            <EditText
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/update_compliance_valid_from"
                android:textColorHint="@color/button_text"
                android:textColor="@color/button_text"
                android:hint="Valid From"
                android:focusable="false"
                android:inputType="date"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:enabled="false"
                android:layout_below="@id/update_compliance_note"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/custom_textbox"/>

            <EditText
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/update_compliance_valid_upto"
                android:textColorHint="@color/button_text"
                android:textColor="@color/button_text"
                android:hint="Valid Upto"
                android:focusable="false"
                android:inputType="date"
                android:enabled="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_below="@id/update_compliance_note"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toEndOf="@id/update_compliance_valid_from"
                android:background="@drawable/custom_textbox"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="#9e9e9e"
                app:strokeWidth="1dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_below="@id/update_compliance_valid_from"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:text="Upload Certificate"
                android:textColor="#9e9e9e"
                android:enabled="false"
                android:textAllCaps="false"
                android:gravity="start|center_vertical"
                android:id="@+id/update_compliance_certificate"/>

            <TextView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_toEndOf="@id/update_compliance_certificate"
                android:layout_below="@id/update_compliance_valid_upto"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:text="You can upload upto 5 certificates (200KB each)"
                android:gravity="center_vertical"
                android:id="@+id/certificate_count"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/update_compliance_certificate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_40sdp"
                android:text="Update Compliance"
                app:strokeColor="@color/colorPrimaryDark"
                app:strokeWidth="1dp"
                android:id="@+id/update_compliance_btn"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>