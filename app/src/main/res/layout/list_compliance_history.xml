<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="true"
        android:layout_margin="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/compliance_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="Compliance Name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/title_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/compliance_ref_no"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/text"
                android:layout_below="@id/compliance_name"
                android:text="Ref No"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/compliance_issue_authority"
                android:gravity="center"
                android:padding="5dp"
                android:background="#9A9A9A"
                android:textColor="@color/button_text"
                android:textSize="@dimen/text"
                android:layout_below="@id/compliance_ref_no"
                android:text="Issuing authority Name"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>